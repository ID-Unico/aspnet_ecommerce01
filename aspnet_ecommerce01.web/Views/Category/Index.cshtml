@model List<Category>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-black">Category List </h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">


        
            <!-- Container centers the content and applies side margins -->
            <div class="row pb-3">
                <!-- Row creates a row to organize columns -->
                <div class="col-6">
                    
                </div>
                <div class="col-6 text-end">
                    <!-- text-end aligns the content to the right -->
                    <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                        <!-- btn applies button styles, btn-primary applies blue color -->
                        <i class="bi bi-plus-circle"></i>Create new category
                        <!-- bi bi-plus-circle is a Bootstrap Icons class for the plus-circle icon -->
                    </a>
                </div>
            </div>

            <table class="table table-bordered table-striped">
                <!-- table applies table styles, table-bordered adds borders, table-striped alternates row colors -->
                <thead>
                    <tr>
                        <th>Category Name</th>
                        <th>Display Order</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Loop through the list of categories and display each one -->
                    @foreach (var obj in Model.OrderBy(o => o.DisplayOrder))
                    {
                        <tr>
                            <td>@obj.Name</td>
                            <td>@obj.DisplayOrder</td>
                            <td>
                                <div class="w-75 btn-group" role="group">
                                    <!-- w-75 sets the width to 75% of the parent container -->
                                    <!-- btn-group groups buttons in a single line -->
                                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                        <!-- mx-2 applies horizontal margin (left and right) -->
                                        <i class="bi bi-pencil-square"></i> Edit
                                        <!-- bi bi-pencil-square is a Bootstrap Icons class for the pencil-square icon -->
                                    </a>
                                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                        <!-- btn-danger applies red color to the button -->
                                        <i class="bi bi-trash-fill"></i> Delete
                                        <!-- bi bi-trash-fill is a Bootstrap Icons class for the trash-fill icon -->
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        
       
    </div>
</div>
